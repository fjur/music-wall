<div class="outer-image-div">

  <% @songs.each_slice(3) do |song| %>
<!-- [1,2,3,4,5,6,7,8,9,0].each_slice(3) {|a| p a} -->

<div class="bs-example" data-example-id="thumbnails-with-custom-content">
<% if song[0] %>
 <div class="row"> <div class="col-sm-6 col-md-4"> <div class="thumbnail"> <img data-src="holder.js/100%x200" alt="100%x200" style="height: 280px; width: 200%; display: block;" src="<%= get_photos_from_amazon(song[0].author, song[0].album) %>" data-holder-rendered="true"> <div class="caption">  <h3><%= song[0].song_title %></h3>
                <h4><%= song[0].author %></h4>
                <h4>Total Votes: <%= song[0].votes.count %></h4>
                 <% if song[0].url %>
                   <p>
                    Url : <a href="<%= song[0].url %>">Click Me</a>
                    </p>
                  <% end %>
                  <% if current_user && song[0].votes.find_by(user_id: current_user.id, song_id: song[0].id).nil? %>
                    <form action ="/upvote/<%= song[0].id %>" method = "POST">
                      <input class="btn btn-lg btn-primary" type="submit" name="upvote" value="Up Vote" />
                    </form>
                  <% end %>

                  <div id="review">
                    <% if current_user %>
                      <form action="/review/<%= song[0].id %>" method="POST">
                       <div>
                          <div class="rateYo"></div>
                          <input class="review-rating" type="hidden" name="rating">
                        </div>
                        <div>
                          <label>Review Title</label>
                          <input type="text" name="title">
                        </div>
                        <div>
                          <label>Content</label>
                          <input type="text" name="content">
                        </div>
                        <div>
                          <input type="submit" value="Submit">
                        </div>
                      </form>
                    <% end %>
                  </div>

                  <% if song[0].reviews %>
                  <!-- Show Review Code Here -->
                    <% song[0].reviews.each do |review| %>
                      <p>
                        Review Title: <%= review.title %>
                      </p>
                      <p>
                        Reviewer: <%= get_song_reviewer(review) %>
                      </p>
                      <p>
                        Rating: <%= review.rating %>
                      </p>
                      <p>
                        Review: <%= review.content %>
                      </p>

                      <% if current_user && get_song_reviewer(review) == current_user.email %>
                        <form action="/review_delete/<%= review.id %>" method="POST">
                        <div>
                          <input type="submit" value="delete" name="delete">
                        </div>
                      <% end %>
                    <% end %>
                  <% end %>

                <p>...</p><p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p> </div> </div> </div>
<% end %>

